    <div class="col-md-8 col-md-offset-2 centered">
      <h1>Items</h1>
      <hr class="aligncenter">
    </div>
  </div>
  <div id="grid-container" class="cbp-l-grid-fullScreen">
     <ul>
        <% Item.all.each do |item| %>
        <li class="cbp-item identity">
           <a class="cbp-caption cbp-lightbox" data-title="<%= item.caption %>" href="<%= item.photo_url %>">
              <div class="cbp-caption-defaultWrap">
                 <img src="<%= item.photo_url %>" alt="<%= item.title %>" class="img-responsive">
              </div>
              <div class="cbp-caption-activeWrap">
                 <div class="cbp-l-caption-alignCenter">
                    <div class="cbp-l-caption-body">
                       <div class="cbp-l-caption-title"><%= item.title %></div>
                       <div class="cbp-l-caption-desc"><%= item.donor %></div>
                    </div>
                 </div>
              </div>
           </a>
        </li>
        <% end %>
        <!-- end:Item -->
     </ul>
  </div>
  <!--/ END PORTFOLIO SECTION -->
</div><!--/items -->

