<div class="container">
  <div class="page-header">
    <h1>Add an Item</h1>
  </div>
  <%= form_for [:admin, @item], :class => "form-horizontal" do |f| %>
    
    <div class="form-group">
      <%= f.label :title, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :caption, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :caption, :class => "form-control" %>
      </div>
    </div>  

    <div class="form-group">
      <%= f.label :donor, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :donor, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :photo_url, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :photo_url, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :starting_price, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :starting_price, :class => "form-control" %>
      </div>
    </div>
    
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  label {
    padding-top: 10px;
  }
</style>