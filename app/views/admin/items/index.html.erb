<h1>Items</h1>
<%= link_to "Add item", new_admin_item_path %>

<table class="table">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Caption</th>
    <th>Donor</th>
    <th>Starting Price</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.photo_url, :width => 100 %></td>
      <td><%= item.title %></td>
      <td><%= item.caption %></td>
      <td><%= item.donor %></td>
      <td><%= item.starting_price %></td>
    </tr>
  <% end %>
</table>